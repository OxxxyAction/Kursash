<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >


    <LinearLayout
        android:id="@+id/layoutloginmain"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/toolBarColor"
            android:elevation="4dp"
            android:minHeight="?attr/actionBarSize"
            android:transitionName="actionBar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_title"
                android:textColor="@color/md_white_1000"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title_login" />
        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Авторизация"
            android:id="@+id/textViewLoginAuth"
            android:textSize="30sp"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Для входа в приложение необходимо заполнить соответствующие поля"
            android:id="@+id/textViewLoginAuthDescription"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/edtLogin"
            android:layout_gravity="center"
            android:background="@drawable/edittext_login"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/log"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:hint="Имя пользователя" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/edtPassword"
            android:layout_gravity="center"
            android:background="@drawable/edittext_login"
            android:paddingLeft="10dp"
            android:hint="Пароль"
            android:drawableLeft="@drawable/pas"
            android:inputType="textPassword"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:ems="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поля Логин или Пароль не могут быть пустыми"
            android:id="@+id/txtViewLoginError"
            android:textSize="15sp"
            android:textColor="#ffff353d"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txtView_login_forgetpassword"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:text="Забыли пароль?"/>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ВХОД"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="center"
            android:textColor="@color/md_white_1000"
            android:background="@drawable/buttonselector"
            android:id="@+id/buttonLogin" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnRegistration"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="@drawable/background2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/registration"
            android:textSize="20sp"
            android:textColor="@color/toolBarColor"/>
    </LinearLayout>




</FrameLayout>